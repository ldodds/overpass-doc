<div class="container">
      <div class="bg-light p-5 rounded">
        	<h1><%= title %></h1>
          <p class="lead"><%= description %></p>
      </div>

	  <% if overview %>
      	<div class="row">
        	<div class="col">
          	<%= overview %>
        	</div>
      	</div>
	  <% end %>

      <div class="row">
        <div class="col">
          <% if children.any? %>
            <h3>Collections</h3>

            <p>This package contains the following collections of queries.</p>
            <table class="table table-hover">
              <thead>
                <th>Title</th><th>Description</th>
              </thead>
              <tbody>
                <% children.each do |child| %>
                  <tr>
                    <td>
                      <a href="<%= child? ? "../" : "./" %><%= asset_path( child.path ) %>/index.html"><%= child.title %></a>
                    </td>
                    <td><%= child.description %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <h3>Queries</h3>
          <p>This package contains the following <strong><%= queries.size %></strong> <%= queries.size > 1 ? 'queries' : 'query' %></p>
          <table class="table table-hover">
            <thead>
            	<tr>
            		<th>Title</th><th>Source Path</th>
            	</tr>
            </thead>
            <tbody>
           		<% queries.each do |query| %>
           		<tr>
           		  <td><a href="<%= query.output_filename %>"><%= query.title %></a></td><td><code><%= query.path %></code></td>
           		</tr>
            </tbody>
           		<% end %>
          </table>
        </div>
      </div>

</div>
